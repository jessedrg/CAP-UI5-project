<mvc:View
	controllerName="be.wl.CAPDemoUI.controller.User"
	displayBlock="true"
	height="100%"
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
    <Bar>
				<contentRight>
					<Button id="save" text="Crear" type="Emphasized"  press="handleSavePress" />
					<Button id="entrar" text="Entrar" type="Emphasized" press="oEntrar"/>
	
				</contentRight>
		</Bar>
        <VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormChangeColumn_threeGroups234"
			editable="true"
			layout="ColumnLayout"
			title="Empezemos!"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			>
			<f:content>
			<core:Title text="Crea tu Usuario" />
               <Label text="ID" />
				<Input id="id" value="{formModel>/ID}" />
				<Label text="Nombre" />
				<Input id="nombre" value="{formModel>/name}" />
                <Label text="Apellido" />
				<Input id="gastoExtra" value="{formModel>/second_name}" />
                <Label text="Correo" />
				<Input id="email" value="{formModel>/email}" />			
			</f:content>
		</f:SimpleForm>
	</VBox>

	
</mvc:View>